<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_portrait1"
    tools:context=".SwahiliMainActivity">
    <fragment
        android:id="@+id/SwahililistFrag"
        android:name="example.technerd.com.carowner.listFrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        tools:layout="@layout/fragment_swahililist" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <fragment
            android:id="@+id/swahiliOwnerFrag"
            android:name="example.technerd.com.carowner.ownerinfoFrag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:layout="@layout/fragment_swahili_owner" />
    </LinearLayout>

</LinearLayout>